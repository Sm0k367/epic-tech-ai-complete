{
  "version": 2,
  "name": "epic-tech-ai",
  "env": {
    "OPENAI_API_KEY": {
      "description": "OpenAI API Key for GPT responses",
      "required": false
    },
    "XAI_API_KEY": {
      "description": "Grok API Key for X.AI responses",
      "required": false
    },
    "NODE_ENV": {
      "default": "production"
    }
  },
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/socket.io/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/health",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ],
  "functions": {
    "server.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}
